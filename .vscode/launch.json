{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug - Connector",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "connector",
        "run",
        "--grpc-bind=:30001",
        "--http-bind=:30002",
        "--api-bind=:30003",
        "--root-cert-path=${env:HOME}/.jumppad/certs/root.cert",
        "--server-cert-path=${env:HOME}/.jumppad/certs/leaf.cert",
        "--server-key-path=${env:HOME}/.jumppad/certs/leaf.key",
        "--log-level=debug"
      ]
    },
    {
      "name": "Debug - Up",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "up",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Up2",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "up",
        "../terraform-workshop",
      ],
    },
    {
      "name": "Debug - Dev",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "dev",
        "--disable-tty",
        "${input:blueprint}",
      ],
    }, 
    {
      "name": "Debug - Down",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "down"
      ]
    },
    {
      "name": "Debug - Push",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "push",
        "nicholasjackson/example-wasm-filter:latest",
        "k8s_cluster.k3s"
      ]
    },
    {
      "name": "Debug - Test",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "test",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Build",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "build",
        "./examples/plugins/plugin_config.hcl",
      ],
    }
  ],
  "inputs": [
    {
      "id": "blueprint",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "include": "*/*",
        "exclude": "**/.vscode",
        "display": "fileName",
        "description": "Blueprint to use",
        "showDirs": true,
        "fromFolder": { "fixed": "${workspaceFolder}/examples/" }
      }
    }
  ]
}