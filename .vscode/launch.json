{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Connector Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickGoProcess}",
    },
    {
      "name": "Debug - Dev Docs Debugging",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "dev",
        "--disable-tty",
        "/home/nicj/go/src/github.com/nicholasjackson/workshop-vault-kubernetes/jumppad",
      ],
    },
    {
      "name": "Debug - Connector",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "--non-interactive",
        "connector",
        "run",
        "--grpc-bind=:30001",
        "--http-bind=:30002",
        "--api-bind=:30003",
        "--root-cert-path=${env:HOME}/.jumppad/certs/root.cert",
        "--server-cert-path=${env:HOME}/.jumppad/certs/leaf.cert",
        "--server-key-path=${env:HOME}/.jumppad/certs/leaf.key",
        "--log-level=debug"
      ]
    },
    {
      "name": "Debug - Validate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "validate",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Up",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "up",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Up Podman",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug",
        "DOCKER_HOST": "unix:///mnt/wsl/podman.sock"
      },
      "args": [
        "up",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Up2",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "up",
        "../terraform-workshop",
      ],
    },
    {
      "name": "Debug - Dev",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "dev",
        "--disable-tty",
        "${input:blueprint}",
      ],
    }, 
    {
      "name": "Debug - Down",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "down",
        "--force"
      ]
    },
    {
      "name": "Debug - Push",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "push",
        "nicholasjackson/example-wasm-filter:latest",
        "k8s_cluster.k3s"
      ]
    },
    {
      "name": "Debug - Test",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "test",
        "${input:blueprint}",
      ],
    },
    {
      "name": "Debug - Build",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "build",
        "./examples/plugins/plugin_config.hcl",
      ],
    }
  ],
  "inputs": [
    {
      "id": "blueprint",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "include": "*/*",
        "exclude": "**/.vscode",
        "display": "fileName",
        "description": "Blueprint to use",
        "showDirs": true,
        "fromFolder": { "fixed": "${workspaceFolder}/examples/" }
      }
    },
    {
      "id": "connectorProcess",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
          "command": "ps axww --no-headers k comm -o '%p|%c|%p|%a'| grep '[c]onnector run' | sed -e 's/^\\s*//' -e 's/\\s*|\\s*/|/g'", "fieldSeparator": "|",
          "description": "Select the process to attach to",
          "useFirstResult": "true",
      }
    }
  ]
}
