func TestNomadJobValidatesConfig(t *testing.T) {
	jc, mh := setupNomadJobMocks()

	p := NewNomadJob(jc, mh, clients.NewTestLogger(t))

	err := p.Create(context.Background())
	assert.NoError(t, err)
